<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothFragment">

    <Button
        android:id="@+id/btScanButton"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_marginBottom="33dp"
        android:onClick="onBTScanButtonClick"
        android:text="@string/scan"
        app:layout_constraintBottom_toTopOf="@+id/btDeviceList"
        app:layout_constraintEnd_toEndOf="@+id/btDeviceList"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/btDeviceList"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ListView
        android:id="@+id/btDeviceList"
        android:layout_width="312dp"
        android:layout_height="427dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btScanButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="12dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toTopOf="@+id/btScanButton"
        app:layout_constraintEnd_toEndOf="@+id/btScanButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btScanButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>